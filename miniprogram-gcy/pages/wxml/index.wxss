@import "../../utils/weui.wxss";
page{
  height: 100%;
}
.root{
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #f0f0f0;
}
.tabs{
  display: flex;
  background-color: pink;
}
.content{
  flex: 1;
  background-color: yellow;
}
.slide image{
  width: 100%;
  height: 130px;
}
.tabs .item{
  flex: 1;
  text-align: center;
  font-size: 12px;
  padding: 5px 0;
  background-color: #222;
  color: #ccc;
}
.tabs .item.active{
  color: #fff;
  border-bottom: 2px solid #e9232c;
}
.player{
  display: flex;
  background-color: #000;
}
.poster image{
  width: 30px;
  height: 30px;
  margin: 5px 5px 0 5px;
}
.info{
  flex: 1;
  color: #888;
  font-size: 12px;
}
.info .title{
  display: block;
  font-size: 13px;
  color: #ccc;
}
.controls image{
  width: 15px;
  height: 15px;
  vertical-align: middle;
  margin-right: 10px;
}
.controls {
  line-height: 42px;
}
.container {
  border-top: 1rpx solid #e0e0e0;
}
.header {
  display: flex;
  margin: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 5rpx;
  box-shadow: 0 0 10rpx #e0e0e0;
  padding: 20rpx;
  align-items: center;
}
.header image { 
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.todos {
  margin: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 5rpx;
  box-shadow: 0 0 10rpx #e0e0e0;
}
.todos .item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #e0e0e0;
}
.todos .item:last-child {
  border-bottom: 0;
}
.todos .item text {
  flex: 1;
  font-size: 30rpx;
  color: #444;
  margin-left: 20rpx;
}
.todos .item.completed text{
  color: #888;
  text-decoration: line-through;
}
.footer {
  margin: 20rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
  color: #333;
}